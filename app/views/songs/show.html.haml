.page-header
  = link_to songs_path, :class => 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_song_path(@song), :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show song

%dl.dl-horizontal
  %dt Artist:
  %dd= @song.artist
  %dt Title:
  %dd= @song.title
